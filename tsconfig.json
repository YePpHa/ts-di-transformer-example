{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noEmitOnError": true,

    "target": "es5",
    "lib": ["es5", "es6"],
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist",
    
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,

    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}